{% trans_default_domain 'ibexa_segmentation' %}

{% embed '@ibexadesign/ui/component/modal/modal.html.twig' with {
    title: 'form.creating_new_segment_group'|trans|desc('Create segment group'),
    class: 'ibexa-modal--create-segment-group',
    id: 'create-segment-group-modal',
} %}
    {% trans_default_domain 'ibexa_segmentation' %}

    {% block content_before %}
        {% form_theme form '@ibexadesign/segmentation/admin/groups/modal/form_types.html.twig' %}
        {{ form_start(form, {
            'action': path('ibexa.segmentation.group.create'),
            'method': 'POST'
        }) }}
    {% endblock %}
    {% block body_content %}
        <div class="ibexa-form-block">
            {{ form_row(form.name, { row_attr: { class: 'ibexa-form-field' } }) }}
            {{ form_row(form.identifier, { row_attr: { class: 'ibexa-form-field' } }) }}
            {{ form_row(form.create_segments, {'label': false}) }}
        </div>
    {% endblock %}
    {% block footer_content %}
        {{ form_widget(form.create, { 'attr': { 'class': 'btn ibexa-btn ibexa-btn--primary' } }) }}
        <button type="button" class="btn ibexa-btn ibexa-btn--secondary" data-bs-dismiss="modal">
            {{ 'form.cancel'|trans|desc('Cancel') }}
        </button>
    {% endblock %}
    {% block content_after %}
        {{ form_end(form) }}
    {% endblock %}
{% endembed %}
