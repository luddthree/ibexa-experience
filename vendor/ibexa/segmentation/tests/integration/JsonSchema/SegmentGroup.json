{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "SegmentGroup": {
      "type": "object",
      "properties": {
        "_media-type": {
          "type": "string"
        },
        "_href": {
          "type": "string"
        },
        "id": {
          "type": "integer"
        },
        "identifier": {
          "type": "string",
          "minLength": 1,
          "pattern": "^[[:alnum:]_]+"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "_media-type",
        "_href",
        "id",
        "identifier",
        "name"
      ]
    }
  },
  "required": [
    "SegmentGroup"
  ]
}
