{% embed '@ibexadesign/ui/component/modal/modal.html.twig' with {
    class: 'ibexa-modal--send-to-trash',
    no_header: true,
    id: 'delete-taxonomy-entry-modal',
} %}
    {% trans_default_domain 'ibexa_taxonomy_modals' %}
    {% form_theme form '@ibexadesign/ui/form_fields.html.twig' %}

    {% block body_content %}
        <p class="ibexa-modal-body__main">
            {{ 'delete.modal.message'|trans|desc('Are you sure you want to delete this entry?') }}
        </p>
    {% endblock %}
    {% block footer_content %}
        {{ form_start(form, {'action': path('ibexa.taxonomy.entry.delete', {'taxonomyName': taxonomy})}) }}
            {{ form_widget(form.delete, {'attr': {'class': 'btn ibexa-btn ibexa-btn--primary'}}) }}
            <button type="button" class="btn ibexa-btn ibexa-btn--secondary" data-bs-dismiss="modal">
                {{ 'delete.form.cancel'|trans|desc('Cancel') }}
            </button>
        {{ form_end(form) }}
    {% endblock %}
{% endembed %}
