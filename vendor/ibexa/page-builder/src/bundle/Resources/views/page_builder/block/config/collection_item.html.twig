{% trans_default_domain 'ibexa_page_builder_block_config_actions' %}

<li
    class="ibexa-pb-collection-item"
    data-id="{{ id }}"
    draggable="true"
>
    <div
        class="ibexa-pb-collection-item__content"
        data-id="{{ id }}"
        draggable="true"
    >
        <div class="ibexa-pb-collection-item__left-col">
            <div class="ibexa-pb-collection-item__drag-handler">
                <svg class="ibexa-icon ibexa-icon--tiny-small">
                    <use xlink:href="{{ ibexa_icon_path('drag') }}"></use>
                </svg>
            </div>
            <div class="ibexa-pb-collection-item__label">
                <div 
                    {% if content_id is defined %}
                        data-ibexa-update-content-id="{{ content_id }}"
                        data-ibexa-update-source-data-path="Content.Name"
                    {% endif %}
                    class="ibexa-pb-collection-item__label-name"
                >{{ content_name }}</div>
                <div class="ibexa-pb-collection-item__label-type">{{ content_type_name }}</div>
            </div>
        </div>
        <div class="ibexa-pb-collection-item__right-col">
            <div class="ibexa-pb-collection-item__trash-wrapper">
                <button class="btn ibexa-btn ibexa-btn--ghost ibexa-btn--no-text ibexa-btn--trash ibexa-btn--small" title="{{ 'delete'|trans|desc('Delete') }}">
                    <svg class="ibexa-icon ibexa-icon--small">
                        <use xlink:href="{{ ibexa_icon_path('trash') }}"></use>
                    </svg>
                </button>
            </div>
            {% set embedded_item_actions_variables = {} %}

            {% if content_id is defined %}
                {% set embedded_item_actions_variables = {
                    content_id: content_id,
                    location_id: id,
                    language_codes,
                } %}
            {% endif %}

            {% include '@ibexadesign/ui/component/embedded_item_actions/embedded_item_actions.html.twig' with embedded_item_actions_variables only %}
        </div>
    </div>
</li>
