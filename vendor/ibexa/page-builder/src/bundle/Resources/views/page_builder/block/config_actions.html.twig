{% trans_default_domain 'ibexa_page_builder_block_config_actions' %}

<div class="ibexa-pb-block-config__actions">
    {{ form_widget(form.configure, {
            'attr': {
                'class': 'ibexa-pb-block-config__btn--save ibexa-pb-block-config__btn btn ibexa-btn ibexa-btn--filled-info',
                'data-form-action': 'save'
            },
            'label': 'submit'|trans|desc('Save and close')
        })
    }}
    <button
    	type="button"
    	class="ibexa-pb-block-config__btn--cancel ibexa-pb-block-config__btn btn ibexa-btn ibexa-btn--info"
    	data-form-action="discard"
    >
        {{ 'cancel'|trans|desc('Discard') }}
    </button>
</div>
