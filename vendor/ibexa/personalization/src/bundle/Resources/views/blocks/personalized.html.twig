{% block block_identifier %}personalized{% endblock %}
{% block block_class %}{{ block_class }}{% endblock %}

{% block block_content %}
    {% if block_name is defined %}
        <div class="row block-header">
            <span class="block-header__name">{{ block_name }}</span>
        </div>
    {% endif %}

    <div class="ibexa-personalized-block">
        {{ render(controller('ibexa_personalization::showRecommendationsAction', {
            'scenario': scenario,
            'outputType': output,
            'limit': number,
            'template': '@IbexaPersonalization/preview/personalized.html.twig',
            'attributes': ['title', 'intro', 'image', 'uri'],
        })) }}
    </div>
{% endblock %}
