<li class="ibexa-perso-dashboard-chart-legend__item-wrapper">
    <label class="ibexa-perso-dashboard-chart-legend__item">
        <input
            type="checkbox"
            class="ibexa-input ibexa-input--checkbox ibexa-input--legend-item-checkbox"
            data-checked-color="{{ checked_color }}"
            data-dataset-index="{{ dataset_index }}"
        />
        <div class="ibexa-perso-dashboard-chart-legend__label">{{ label }}</div>
        <div class="ibexa-perso-dashboard-chart-legend__label-value">{{ label_value }}</div>
    </label>
</li>
