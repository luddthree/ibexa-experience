{% extends '@ibexadesign/customer_portal/account/base.html.twig' %}
{% trans_default_domain 'ibexa_customer_portal' %}

{% form_theme form_reset_user_password '@ibexadesign/ui/form_fields.html.twig'  %}

{%- block content -%}
    <h2 class="ibexa-ca-login__actions-headline">{{ 'account.reset_user_password.change_password'|trans|desc('Change password') }}</h2>
    {% if form_reset_user_password is defined %}
        {{ form_start(form_reset_user_password, {'attr': {'class': 'ibexa-form-validate'}}) }}
        <fieldset>
            {{ form_widget(form_reset_user_password.new_password) }}
        </fieldset>
        {{ form_widget(form_reset_user_password.update, {'attr': {'class': 'btn ibexa-btn ibexa-btn--primary'}}) }}
        {{ form_end(form_reset_user_password) }}
    {% endif %}

{%- endblock content -%}
