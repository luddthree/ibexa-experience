{% extends '@ibexadesign/corporate_account/edit.html.twig' %}

{% trans_default_domain 'ibexa_corporate_account' %}

{% block main_container_class %}{{ parent() }} ibexa-ca-company-create-edit{% endblock %}

{% block header %}
    {% include '@ibexadesign/ui/edit_header.html.twig' with {
        action_name: 'member.edit.editing'|trans|desc('Editing'),
        content_type_name: content_type.name,
        title: member.getName(),
        icon_name: 'file',
        show_autosave_status: true,
    } %}
{% endblock %}

{% set context_actions %}
    {% set menu_items %}
        <li class="ibexa-context-menu__item ibexa-adaptive-items__item">
            <button
                type="button"
                data-click="#member_edit_update"
                class="btn ibexa-btn ibexa-btn--primary ibexa-btn--trigger"
            >
                <span class="ibexa-btn__label">
                    {{ 'member.edit.save_btn.label'|trans|desc('Save and close') }}
                </span>
            </button>
        </li>
        <li class="ibexa-context-menu__item ibexa-adaptive-items__item">
            <button
                type="button"
                data-click="#member_edit_cancel"
                class="btn ibexa-btn ibexa-btn--secondary ibexa-btn--trigger"
            >
                <span class="ibexa-btn__label">
                    {{ 'member.edit.cancel_btn.label'|trans|desc('Discard') }}
                </span>
            </button>
        </li>
    {% endset %}

    {{ include('@ibexadesign/ui/component/context_menu/context_menu.html.twig', {
        menu_items,
    }) }}
{% endset %}

{% block form_fields %}
    {{- form_widget(form.cancel, { attr: { hidden: true }}) -}}
    {{- form_widget(form.update, { attr: { hidden: true }}) -}}
    {{ parent() }}
{% endblock %}
