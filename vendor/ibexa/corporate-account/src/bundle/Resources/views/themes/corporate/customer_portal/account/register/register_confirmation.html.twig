{% extends '@ibexadesign/customer_portal/account/base.html.twig' %}

{% trans_default_domain 'ibexa_customer_portal' %}

{%- block content -%}
    <h1>{{ 'account.register_confirmation.header'|trans|desc('Your account has been created') }}</h1>
    <p class="user-register-confirmation-message">
        {{ 'account.register_confirmation.message'|trans({ '%login%': path('login') })
                |desc('Thank you for creating an account. You can now <a href="%login%">log in</a>')|raw }}
    </p>
{%- endblock content -%}
