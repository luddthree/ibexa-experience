{% extends "@ibexadesign/ui/layout.html.twig" %}

{% trans_default_domain 'ibexa_product_catalog' %}

{% block header %}
    {% include '@ibexadesign/ui/page_title.html.twig' with {
        title: header_title
    } %}
{% endblock %}

{% block content %}
    <div class="ibexa-container">
        {% block list_search %}
            {% include '@ibexadesign/product_catalog/search_form.html.twig' with {
                is_inside_container: true,
            } %}
        {% endblock %}

        <div class="ibexa-pc-data-grid">
            {% block data_grid %}{% endblock %}
            {% block data_grid_pagination %}
                {% if pager is defined and pager.haveToPaginate() %}
                    {% include '@ibexadesign/ui/pagination.html.twig' with { pager } %}
                {% endif %}
            {% endblock %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('ibexa-product-catalog-css', null, 'ibexa') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('ibexa-product-catalog-list-js', null, 'ibexa') }}
{% endblock %}
