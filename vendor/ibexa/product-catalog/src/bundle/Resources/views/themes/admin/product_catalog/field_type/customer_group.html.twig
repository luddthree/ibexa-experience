{% block ibexa_customer_group_field %}
    {% apply spaceless %}
        {% set customer_group = parameters.customer_group %}
        {% if customer_group is not null %}
            <a href="{{ path('ibexa.product_catalog.customer_group.view', { customerGroupId: customer_group.id }) }}">
                {{ customer_group.name }}
            </a>
        {% endif %}
    {% endapply %}
{% endblock %}
