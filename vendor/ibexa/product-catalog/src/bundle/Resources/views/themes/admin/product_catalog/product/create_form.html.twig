{% trans_default_domain 'ibexa_product_catalog' %}

{% form_theme form '@ibexadesign/product_catalog/form_fields.html.twig' %}

<div class="ibexa-extra-actions ibexa-extra-actions--create ibexa-extra-actions--hidden" data-actions="create">
    <div class="ibexa-extra-actions__header">
        <h3>{{ 'ibexa_product_catalog.product_create_form.title'|trans|desc('Create product') }}</h3>
        <button class="btn ibexa-btn ibexa-btn--ghost ibexa-btn--small ibexa-btn--no-text ibexa-btn--close">
            <svg class="ibexa-icon ibexa-icon--small-medium">
                <use xlink:href="{{ ibexa_icon_path('discard') }}"></use>
            </svg>
        </button>
    </div>
    <div class="ibexa-extra-actions__content">
        {{ form_start(form, { 'attr': { 'autocomplete': 'off', 'class': 'ibexa-extra-actions__pre-form' } }) }}
            {% set form_row_options = { attr: {
                dropdown_class: 'ibexa-pc-custom-dropdown',
                dropdown_custom_init: true,
            }} %}

            {{ form_row(form.language, form_row_options) }}
            {{ form_row(form.productType, form_row_options) }}

        <div class="ibexa-extra-actions__btns ibexa-extra-actions__pre-form-btns">
            <button class="btn ibexa-btn ibexa-btn--primary" type="submit">
                {{ 'ibexa_product_catalog.product_create_form.submit'|trans|desc('Create') }}
            </button>
            <button class="btn ibexa-btn ibexa-btn--secondary ibexa-btn--close" type="button">
                {{ 'attribute_definition.pre_create.cancel'|trans|desc('Cancel') }}
            </button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
