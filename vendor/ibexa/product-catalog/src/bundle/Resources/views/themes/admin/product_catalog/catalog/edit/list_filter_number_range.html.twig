
{% set is_filled_filter = criteria.vars.value.min is defined and criteria.vars.value.max is defined %}

{% embed '@ibexadesign/product_catalog/catalog/edit/list_filter_tags.html.twig' with {
    is_empty_filter: not is_filled_filter,
} %}
    {% block content %}
        {% trans_default_domain 'ibexa_product_catalog' %}

        {% if criteria.vars.value.min is defined and criteria.vars.value.max is defined %}
            {% set value = criteria.vars.value.min ~ " - " ~ criteria.vars.value.max  %}

            {{ include('@ibexadesign/ui/tag.html.twig', {
                content: value,
                is_loading_state: false,
                is_deletable: not is_filter_preview,
                tag_attributes: {
                    'class': 'ibexa-pc-edit-catalog-list-filter-tag',
                    'data-tag-text': value,
                }
            }) }}
        {% endif %}
    {% endblock %}
{% endembed %}
