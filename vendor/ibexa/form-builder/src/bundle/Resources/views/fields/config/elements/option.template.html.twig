<div class="ibexa-fb-form-field-config-option" draggable="true">
    <div class="ibexa-fb-form-field-config-option__left-col">
        <div class="ibexa-fb-form-field-config-option__drag-handler">
            <svg class="ibexa-icon ibexa-icon--tiny-small">
                <use xlink:href="{{ ibexa_icon_path('drag') }}"></use>
            </svg>
        </div>
        <div class="ibexa-fb-form-field-config-option__input-wrapper">
            <input type="text" class="ibexa-fb-form-field-config-option__input ibexa-input ibexa-input--text form-control" />
        </div>
    </div>
    
    <div class="ibexa-fb-form-field-config-option__right-col">
        <div class="ibexa-fb-form-field-config-option__trash-wrapper">
            <button type="button" class="ibexa-fb-form-field-config-option__remove-btn btn ibexa-btn ibexa-btn--ghost ibexa-btn--small ibexa-btn--no-text" disabled>
                <svg class="ibexa-icon ibexa-icon--small">
                    <use xlink:href="{{ ibexa_icon_path('trash') }}"></use>
                </svg>
            </button>
        </div>
    </div>
</div>
